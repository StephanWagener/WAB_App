<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="@color/progress_background_center"
                android:centerY="0.5"
                android:endColor="@color/progress_background_end"
                android:startColor="@color/progress_background_start" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/statusbar_color"
                    android:centerY="0.5"
                    android:endColor="@color/magenta"
                    android:startColor="@color/light_magenta" />
            </shape>
        </clip>
    </item>
</layer-list>