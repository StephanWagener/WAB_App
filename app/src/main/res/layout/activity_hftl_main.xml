<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Main.MainActivity">

    <android.support.v7.widget.Toolbar
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/magenta">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="10dp"
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
                android:visibility="invisible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HFTL"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/special_title_size"
                android:id="@+id/toolbarTitle"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:id="@+id/menu_icon"
                android:src="@drawable/menu"
                android:padding="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/toolbarTitle"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/activityLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:id="@+id/linearLayout">

                    <LinearLayout
                        android:id="@+id/container1"
                        android:layout_weight="1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent">

                        <Button
                            android:textAllCaps="false"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:layout_margin="3dp"
                            android:text="Direktstudium"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/default_button_text_size"
                            android:background="@color/study_color"
                            android:id="@+id/button_study" />
                    </LinearLayout>


                <LinearLayout
                    android:id="@+id/container2"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent">

                    <Button
                        android:textAllCaps="false"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:text="duales Studium"
                        android:textSize="@dimen/default_button_text_size"
                        android:textColor="#FFFFFF"
                        android:background="@color/study_dual_color"
                        android:id="@+id/button_study_dual" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_below="@+id/linearLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                <LinearLayout
                    android:id="@+id/container3"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent">

                    <Button
                        android:textAllCaps="false"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:text="Berufsbegleitendes Studium"
                        android:textSize="@dimen/default_button_text_size"
                        android:textColor="#FFFFFF"
                        android:background="@color/study_job_color"
                        android:id="@+id/button_study_job" />

                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/container4"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent">

                    <Button
                        android:textAllCaps="false"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:text="Weiterbildung"
                        android:textSize="@dimen/default_button_text_size"
                        android:textColor="#FFFFFF"
                        android:background="@color/education_color"
                        android:id="@+id/button_education" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                <LinearLayout
                    android:id="@+id/container5"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent">

                    <Button
                        android:textAllCaps="false"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:text="Auf zur Hochschule!"
                        android:textSize="@dimen/default_button_text_size"
                        android:textColor="#FFFFFF"
                        android:background="@color/maps_color"
                        android:id="@+id/button_maps" />

                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/container6"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent">

                    <Button
                        android:textAllCaps="false"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:text="Ãœber die HFTL"
                        android:textSize="@dimen/default_button_text_size"
                        android:textColor="#FFFFFF"
                        android:background="@color/hftl_info_color"
                        android:id="@+id/button_hftl_info" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:orientation="horizontal"
                    android:layout_below="@+id/linearLayout3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <Button
                        android:textAllCaps="false"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:text="Studiengangstest"
                        android:textSize="@dimen/default_button_text_size"
                        android:textColor="#FFFFFF"
                        android:background="@color/study_test_color"
                        android:id="@+id/button_study_test" />

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>
