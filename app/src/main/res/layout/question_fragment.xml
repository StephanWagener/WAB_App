<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/question_name"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:text="Fragestellung"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/answer_one"
        android:clickable="true"
        android:textSize="15sp"
        android:padding="10dp"
        android:text="Antwort 1"
        android:button="@drawable/checkbox_selector_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/answer_two"
        android:clickable="true"
        android:textSize="15sp"
        android:padding="10dp"
        android:text="Antwort 2"
        android:button="@drawable/checkbox_selector_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/answer_three"
        android:clickable="true"
        android:textSize="15sp"
        android:padding="10dp"
        android:text="Antwort 3"
        android:button="@drawable/checkbox_selector_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/answer_four"
        android:clickable="true"
        android:textSize="15sp"
        android:padding="10dp"
        android:button="@drawable/checkbox_selector_green"
        android:text="Antwort 4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/answer_five"
        android:clickable="true"
        android:button="@drawable/checkbox_selector_green"
        android:textSize="15sp"
        android:padding="10dp"
        android:text="Antwort 5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>