<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/test_question_title"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"
        android:text="Auswertung"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/underline"
        android:orientation="horizontal"
        android:background="@color/study_test_color"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/solution_text_test"
                android:textSize="20sp"
                android:layout_margin="20dp"
                android:text="Du solltest dich fÃ¼r folgenden Studiengang entscheiden:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/result_test"
                android:textSize="20sp"
                android:layout_margin="20dp"
                android:text="keinen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="10dp"
            android:weightSum="2"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:textAllCaps="false"
                android:layout_weight="1"
                android:id="@+id/end_test"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/round_button_grey"
                android:text="Test Beenden"
                android:textColor="@android:color/white"
                android:layout_width="0dip"
                android:layout_height="wrap_content" />

            <Button
                android:textAllCaps="false"
                android:layout_weight="1"
                android:id="@+id/study_info_button"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button_test"
                android:text="Informationen"
                android:textColor="@android:color/white"
                android:layout_width="0dip"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>